<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:foregroundGravity="top"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:contentDescription="@string/empty"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/top_bg" />

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top"
            android:background="@color/black_overlay"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
            android:id="@+id/command_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/debug_panel_padding"
            android:foregroundGravity="center_horizontal"
            android:gravity="center_horizontal|top"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/connect_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center_horizontal"
                android:gravity="center_horizontal|top"
                android:text="@string/empty"
                android:textColor="@android:color/holo_orange_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />


        </LinearLayout>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/web_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/splash_margin"
        android:layout_marginBottom="@dimen/splash_margin"
        android:paddingLeft="@dimen/def_margin"
        android:paddingRight="@dimen/def_margin" />

    <FrameLayout
        android:id="@+id/btn_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/splash_margin"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btn_back"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="@dimen/ic_launcher_size"
            android:layout_height="@dimen/ic_launcher_size"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_back"
            android:focusable="false"
            android:gravity="bottom|center_horizontal"
            android:visibility="visible" />
    </FrameLayout>
</FrameLayout>


